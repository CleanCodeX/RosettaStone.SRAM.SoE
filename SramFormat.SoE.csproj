<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <Nullable>enable</Nullable>
    <LangVersion>preview</LangVersion>
    <Version>0.2.2</Version>
    <PackageTags>SoE, Secret of Evermore</PackageTags>
    <Authors>CleanCodeX</Authors>
    <Description>Collection of SoE's SRAM models, load (&amp; experimental save) functionality</Description>    
    <Company>CleanCodeX</Company>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
      <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <RepositoryUrl>https://github.com/CleanCodeX/SramFormat.SoE</RepositoryUrl>
    <PackageProjectUrl>https://github.com/CleanCodeX?tab=projects</PackageProjectUrl>
    <PackageId>CCX.SramFormat.SoE</PackageId>
    <PackageIcon>Icon.png</PackageIcon>
    <Product>SramFormat.SoE</Product>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CCX.SramCommons" Version="1.0.0" />
  </ItemGroup>

</Project>
